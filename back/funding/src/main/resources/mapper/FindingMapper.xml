<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="funding.funding.mapper.FundingMapper">

    <!-- 전체 펀딩 조회 -->
    <select id="getAllFunding" resultType="funding.funding.model.entity.Funding">
        SELECT * FROM funding;
    </select>

    <!-- 특정 펀딩 조회 -->
    <select id="getFundingById" parameterType="int" resultType="funding.funding.model.entity.Funding">
        SELECT * FROM funding WHERE funding_id = #{fundingId};
    </select>

</mapper>