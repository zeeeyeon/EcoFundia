<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.user.mapper.WishListMapper">

    <insert id="createWish">
        INSERT INTO wishlist (user_id, funding_id)
        VALUES (#{userId}, #{fundingId})
    </insert>

    <select id="findByUserId" parameterType="int" resultType="com.ssafy.user.entity.WishList">
        SELECT * FROM wishlist WHERE user_id = #{userId}
    </select>

    <delete id="deleteWish">
        DELETE FROM wishlist WHERE user_id = #{userId} AND funding_id = #{fundingId}
    </delete>

    <select id="existsByUserIdAndFundingId" resultType="boolean">
        SELECT EXISTS(
        SELECT 1 FROM wishlist WHERE user_id = #{userId} AND funding_id = #{fundingId}
        )
    </select>

</mapper>